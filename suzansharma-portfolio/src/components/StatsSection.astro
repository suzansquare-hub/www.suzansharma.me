---
import { STATS } from '../lib/constants';
---

<section class="py-20 border-y border-white/10">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16">Growth Systems That Deliver Results</h2>

    <div class="grid md: grid-cols-4 gap-8">
      {STATS.map((stat) => (
        <div class="glass p-8 rounded-2xl text-center hover:border-cyan-400 transition">
          <div class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-600 mb-2">
            {stat.value}
          </div>
          <p class="text-gray-400">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>