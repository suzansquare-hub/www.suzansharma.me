<footer class="border-t border-white/10 bg-gradient-to-b from-transparent to-black/50 backdrop-blur-xl">
  <div class="container mx-auto px-4 py-16">
    <!-- Main Footer Content -->
    <div class="grid md:grid-cols-4 gap-12 mb-12">
      <!-- Brand -->
      <div>
        <h3 class="text-2xl font-bold cyber-text mb-4">SuZan</h3>
        <p class="text-gray-400 text-sm">
          Tourism Growth Systems Specialist.  AI-powered solutions for hotels, resorts, cruise lines & tourism brands.
        </p>
        <div class="flex gap-4 mt-6">
          <a href="https://linkedin.com/in/suzan-sharma-303832178" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-cyan-400 transition">
            LinkedIn
          </a>
          <a href="https://github.com/deepthoughtsuzan" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-cyan-400 transition">
            GitHub
          </a>
          <a href="https://upwork.com/freelancers/~suzan" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-cyan-400 transition">
            Upwork
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-bold mb-4">Services</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li><a href="/services#seo" class="hover:text-cyan-400 transition">Tourism SEO + GEO</a></li>
          <li><a href="/services#booking" class="hover:text-cyan-400 transition">Direct Booking Funnels</a></li>
          <li><a href="/services#content" class="hover:text-cyan-400 transition">AI Travel Content</a></li>
          <li><a href="/services#whatsapp" class="hover:text-cyan-400 transition">WhatsApp Bot</a></li>
          <li><a href="/services#ads" class="hover:text-cyan-400 transition">Paid Advertising</a></li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4 class="font-bold mb-4">Resources</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li><a href="/blog" class="hover:text-cyan-400 transition">Blog</a></li>
          <li><a href="/portfolio" class="hover:text-cyan-400 transition">Portfolio</a></li>
          <li><a href="/tools" class="hover:text-cyan-400 transition">Tools</a></li>
          <li><a href="/faq" class="hover:text-cyan-400 transition">FAQ</a></li>
          <li><a href="/contact" class="hover:text-cyan-400 transition">Contact</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="font-bold mb-4">Legal</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li><a href="/legal/privacy" class="hover:text-cyan-400 transition">Privacy Policy</a></li>
          <li><a href="/legal/terms" class="hover:text-cyan-400 transition">Terms of Service</a></li>
          <li><a href="/legal/disclaimer" class="hover:text-cyan-400 transition">Disclaimer</a></li>
          <li><a href="/rss.xml" class="hover:text-cyan-400 transition">RSS Feed</a></li>
        </ul>
      </div>
    </div>

    <!-- Contact Info -->
    <div class="glass p-6 rounded-2xl mb-8">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <p class="text-gray-500 text-sm">Email</p>
          <a href={`mailto:${SITE.email}`} class="text-cyan-400 hover:text-cyan-300">
            {SITE.email}
          </a>
        </div>
        <div>
          <p class="text-gray-500 text-sm">WhatsApp</p>
          <a href={`https://wa.me/${SITE.whatsapp.replace(/\D/g, '')}`} target="_blank" rel="noopener noreferrer" class="text-cyan-400 hover:text-cyan-300">
            {SITE.whatsapp}
          </a>
        </div>
        <div>
          <p class="text-gray-500 text-sm">Location</p>
          <p class="text-gray-400">Dhaka, Bangladesh</p>
          <p class="text-gray-500 text-xs">(Remote Worldwide)</p>
        </div>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-gray-500 text-sm">
      <p>&copy; 2025 Suzan Sharma | Tourism Growth Systems.  All rights reserved.</p>
      <p>Made with ❤️ for tourism brands worldwide</p>
    </div>
  </div>
