---
interface Props {
  posts: any[];
}

const { posts } = Astro.props;
---

<div class="grid md: grid-cols-3 gap-6">
  {posts.map(post => (
    <a href={`/blog/${post.slug}`} class="glass p-4 rounded-lg hover:border-cyan-400 transition group">
      <h3 class="font-bold text-sm mb-2 group-hover:text-cyan-400 transition line-clamp-2">
        {post.title}
      </h3>
      <p class="text-xs text-gray-500">{post.readingTime} min read</p>
    </a>
  ))}
</div>