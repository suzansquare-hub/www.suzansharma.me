---
import { TESTIMONIALS } from '../lib/constants';
import Card from './ui/Card.astro';
---

<section class="py-20 bg-gradient-to-r from-cyan-900/10 to-purple-900/10">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold mb-4 text-center">What Tourism Brands Say</h2>
    <p class="text-gray-400 text-center max-w-2xl mx-auto mb-16">
      Real results from real clients across the tourism industry
    </p>

    <div class="grid md:grid-cols-3 gap-8">
      {TESTIMONIALS.map((testimonial) => (
        <Card>
          <div class="flex gap-1 mb-4">
            {[...Array(testimonial.rating)].map(() => (
              <span class="text-yellow-400">‚≠ê</span>
            ))}
          </div>
          <p class="text-gray-300 mb-6 italic">"{testimonial.text}"</p>
          <div>
            <p class="font-bold">{testimonial.name}</p>
            <p class="text-sm text-gray-400">{testimonial.role}</p>
            <p class="text-sm text-gray-500">{testimonial.company}, {testimonial.location}</p>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>