---
interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning';
  class?: string;
}

const { variant = 'primary', class:  className } = Astro.props;

const variants = {
  primary: 'bg-cyan-400/20 text-cyan-300',
  secondary: 'bg-purple-400/20 text-purple-300',
  success: 'bg-green-400/20 text-green-300',
  warning: 'bg-yellow-400/20 text-yellow-300',
};
---

<span class={`px-3 py-1 rounded-full text-sm ${variants[variant]} ${className || ''}`}>
  <slot />
</span>