---
interface Props {
  variant?: 'neon' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { variant = 'neon', size = 'md', class:  className } = Astro.props;

const baseClasses = 'font-bold rounded-lg transition inline-block';
const variantClasses = {
  neon: 'neon-button',
  secondary: 'px-6 py-3 border-2 border-cyan-400 text-cyan-400 hover:bg-cyan-400/10',
  ghost: 'px-6 py-3 text-gray-400 hover:text-white',
};
const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3',
  lg: 'px-8 py-4 text-lg',
};

const finalClass = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className || ''}`;
---

<button class={finalClass}>
  <slot />
</button>