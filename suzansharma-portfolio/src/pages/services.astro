---
import Layout from '../layouts/Layout.astro';
import { SERVICES } from '../lib/constants';
import Card from '../components/ui/Card.astro';
---

<Layout title="Services | Suzan Sharma">
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl font-bold mb-8 text-center neon-glow">Tourism Growth Systems</h1>
      
      <div class="grid md:grid-cols-2 gap-12">
        {SERVICES.map((service) => (
          <Card>
            <div class="text-5xl mb-4">{service.icon}</div>
            <h3 class="text-2xl font-bold mb-4">{service.title}</h3>
            <p class="text-gray-300 mb-6">{service.description}</p>
            <a href="#contact" class="text-cyan-400 hover:text-cyan-300 font-semibold">
              Learn More â†’
            </a>
          </Card>
        ))}
      </div>
    </div>
  </section>
</Layout>